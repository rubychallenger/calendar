<div class="row"> 
  <div class="small-12 columns"> 
    <h1 style="font-weight: bold;"> Recent </h1>
  </div>
</div>

<ul class="small-block-grid-5">
  <% @recent.each do |rec| %>
    <li>
        <div class="recent <%= rec.title.name.gsub(' ','')%>rec <%= "shadow" if cookies[:highlight] && cookies[:highlight].split(',').include?(rec.title.name) %>" style="width: 95%;"> 
          <%= image_tag image_path(rec.title.picture)%>  
          
          <div class="numb">
            <p> Season <%= rec.season %> Ep. <%= rec.number %> </p>
          </div>
        </div> 
    </li>
  <% end %>  
</ul>