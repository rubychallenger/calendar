            <p class="show-for-large-up" style="margin: 30px 10px 0 10px;"><%= truncate(@all.first.desc,length: 100, omission: '') %> <%= link_to '[...]', '', class: "read-more-#{@all.first.id}" %>
                <script>
                  $('.read-more-<%= @all.first.id %>').on('click', function(e) {
                    e.preventDefault()
                    $(this).parent().html('<%= escape_javascript @all.first.desc %>')
                  })
                </script>
              </p>
       
            <div class="postimg" style="margin: 30px 0 0 17px;">
              <p><a class="fi-calendar linkpost" href="#"> <%= @all.first.created_at.strftime("%m-%d-%Y") %></a></p>
            </div>
          </div>
          </div>
          </div>

          <% if @all.length > 1 %>
            <div class="row" style="margin-top :20px;">
              <div class="small-12 medium-12 small-centered columns" >
                <ul class="small-block-grid-2 medium-block-grid-4">
                  <% (1..[(@all.length-1),4].min).each do |ind| %>
                    <li><div><%= image_tag @all[ind].image_url, style: "width: 100%; height:auto; "%></div><div style="height:10px;"></div> <a href="#"><p class="sidemenu" title="<%= @all[ind].title %>" ><%= truncate(@all[ind].title,length: 20, omission: '[...]') %></p></a> </li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <% if @all.length > 5 %>
          <div class="row">
              <div class="button round moreposts">More posts</div>
          </div>
          <% end %>

        </div>
